---
type Props = {
  imgSrc: string;
  className?: string;
  link: string;
  imgAlt?: string;
};

const { imgSrc, className, link, imgAlt } = Astro.props;
---

<div class="work-box">
  <a class="work-box__link" href={link}>
    <img src={imgSrc} alt={imgAlt ? imgAlt : " "} class="work-box__image" />
    <div class="work-box__content">
      <p class={`work-box__content-text ${className ? className : " "}`}>
        <slot />
      </p>
      <img
        src="/assets/icons/right-arrow.png"
        class="work-box__content-arrow"
      />
    </div>
  </a>
</div>
