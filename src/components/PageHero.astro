---
type Props = {
    pageId: string;
    classNames?: string;
    shapePrimary?: boolean;
    shapeSecondary?: boolean;
}

const { pageId, classNames = '', shapePrimary = true , shapeSecondary = true} = Astro.props;
let classes = 'page-hero'

if (classNames) {
    classes += ` ${classNames}`
}
---

<section id={`${pageId}-page-hero`} class={classes}>
    <div class="wrapper">
        <div>
            <slot/>
        </div>
    </div>

    {shapePrimary && <div class="shape shape--primary"></div>}
    {shapeSecondary && <div class="shape shape--secondary"></div>}
    <div class="shape shape--tertiary"></div>
</section>