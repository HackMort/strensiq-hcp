---
type Props = {
    pageId: string;
    classNames?: string;
}

const { pageId, classNames = '' } = Astro.props;
let classname = 'page-hero'

if (classNames) {
    classname += ` ${classNames}`
}
---

<section id={`${pageId}-page-hero`} class={classname}>
    <div class="wrapper">
        <div>
            <slot/>
        </div>
    </div>

    <div class="shape shape--primary"></div>
    <div class="shape shape--secondary"></div>
    <div class="shape shape--tertiary"></div>
</section>