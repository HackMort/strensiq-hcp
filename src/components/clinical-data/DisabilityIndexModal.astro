<script>
    import { Fancybox } from "@fancyapps/ui";

    class DisabilityIndexModal {
        modal: Fancybox

        constructor() {
            this.modal = undefined
        }

        open() {
            this.modal = new Fancybox([{ src: 'disability-index-modal' }],
            {
                autoFocus: true,
                defaultType: 'inline',
                placeFocusBack: true,
                trapFocus: true,
                closeButton: false,
                defaultDisplay: 'flex'
            })
        }

        close() {
            this.modal.close()
        }
    }

    document.addEventListener('DOMContentLoaded', () => {
        const disabilityIndexModal = new DisabilityIndexModal()

        const button = document.querySelector('.button--disability-index');
        button.addEventListener('click', event => {
            event.preventDefault();
            disabilityIndexModal.open();
        })
    })
</script>