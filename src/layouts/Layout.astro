---
import "@fancyapps/ui/dist/fancybox/fancybox.css";
import "@fancyapps/ui/dist/panzoom/panzoom.css";
import "@fancyapps/ui/dist/panzoom/panzoom.toolbar.css";
import "../styles/style.scss";
import ISI from "../components/ISI.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import CookieBanner from "../components/CookieBanner.astro";
import ExitModal from "../components/ExitModal.astro";
import RequestARepModalForm from "../components/RequestARepModalForm.astro";
export interface Props {
  title: string;
  displayISI?: boolean;
  classNames?: string;
}

const {
  title,
  classNames,
  // displayReferences = true,
  displayISI = true,
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet"> -->

    <title>{title}</title>
    <script src="/assets/js/validate.js" type="module"></script>
  </head>
  <body>
    <Header />
    <CookieBanner />
    <main class={`main ${classNames ? classNames : ""}`}>
      <slot />
    </main>
    <slot name="references" />
    {displayISI && <ISI />}
    <Footer />
    <ExitModal />
    <RequestARepModalForm />
    <script src="/assets/js/script.js" type="module"></script>
    <script src="/assets/js/tabs.js" type="module"></script>
    <script is:inline src="/assets/js/form-validation.js"></script>
    <script src="../js/modal.js"></script>
    <slot name="scripts" />
  </body>
</html>
